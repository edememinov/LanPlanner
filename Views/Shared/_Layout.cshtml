<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PlannerLanParty Test</title>


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <script src="~/js/site.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">PlannerLanParty</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                    <li class="dropdown">
                        <a href="#" data-toggle="dropdown" class="dropdown-toggle">Events <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a class="submenu_a" tabindex="-1" asp-area="" asp-controller="Home" asp-action="Index">Other stuff</a></li>
                            <li class="dropdown-submenu">
                                <a class="test" tabindex="-1" href="#">Lanparties <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a class="submenu_a" tabindex="-1" asp-area="" asp-controller="LanPartyFinals" asp-action="Index">Planned Lan Parties</a></li>
                                    <li><a class="submenu_a" tabindex="-1" asp-area="" asp-controller="LanPartyConcepts" asp-action="Index">Concept Lan Parties</a></li>
                                </ul>
                            </li>
                            <li class="dropdown-submenu">
                                <a class="test" tabindex="-1" href="#">Games &amp; Tournaments <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a class="submenu_a" tabindex="-1" asp-area="" asp-controller="Games" asp-action="Index">Games</a></li>
                                    <li><a class="submenu_a" tabindex="-1" asp-area="" asp-controller="Tournaments" asp-action="Index">Tournaments</a></li>
                                </ul>
                            </li>
                        </ul>
                </ul>
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - PlannerLanParty</p>
        </footer>
    </div>

    @RenderSection("Scripts", required: false)

    <script>
        $(document).ready(function () {
            $('.dropdown-submenu a.test').on("click", function (e) {
                $(this).next('ul').toggle();
                e.stopPropagation();
                e.preventDefault();
            });
        });
    </script>
</body>
</html>
